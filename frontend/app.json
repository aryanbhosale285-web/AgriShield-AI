{
    "expo": {
        "name": "AgriShield AI",
        "slug": "agrishield-ai",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "dark",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#1a3a2e"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.agrishield.ai",
            "infoPlist": {
                "NSCameraUsageDescription": "AgriShield needs camera access to scan crop leaves for disease detection",
                "NSPhotoLibraryUsageDescription": "AgriShield needs photo library access to upload leaf images",
                "NSLocationWhenInUseUsageDescription": "AgriShield uses your location to tag disease scans for outbreak tracking"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#1a3a2e"
            },
            "package": "com.agrishield.ai",
            "permissions": [
                "CAMERA",
                "READ_EXTERNAL_STORAGE",
                "WRITE_EXTERNAL_STORAGE",
                "ACCESS_FINE_LOCATION",
                "ACCESS_COARSE_LOCATION"
            ]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            [
                "expo-camera",
                {
                    "cameraPermission": "Allow AgriShield to access your camera to scan crop leaves"
                }
            ],
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Allow AgriShield to use your location for disease tracking"
                }
            ]
        ]
    }
}